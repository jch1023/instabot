# Instagram DM Bot - Environment Variables
# Copy this file to .env.local and fill in the values

# Meta App credentials (from developers.facebook.com)
META_APP_ID=
META_APP_SECRET=

# Instagram Access Token (obtained via OAuth flow)
INSTAGRAM_ACCESS_TOKEN=

# Webhook verification token (any random string)
WEBHOOK_VERIFY_TOKEN=instabot_verify_2026

# Base URL for OAuth callback (update for production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
